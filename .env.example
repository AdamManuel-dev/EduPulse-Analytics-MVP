# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_RATE_LIMIT=100

# Database Configuration
DATABASE_URL=postgresql://edupulse_user:development_password@localhost:5432/edupulse
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edupulse
DB_USER=edupulse_user
DB_PASSWORD=development_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_ECHO=false

# TimescaleDB specific
TIMESCALE_CHUNK_TIME_INTERVAL=7d
TIMESCALE_COMPRESSION_AFTER=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# ML Model Configuration
MODEL_PATH=/app/models
MODEL_VERSION=latest
MODEL_DEVICE=cuda
MODEL_BATCH_SIZE=32
MODEL_MAX_SEQUENCE_LENGTH=365
MODEL_LEARNING_RATE=0.001
MODEL_EPOCHS=100
MODEL_EARLY_STOPPING_PATIENCE=10
MODEL_CHECKPOINT_INTERVAL=5

# Feature Engineering
FEATURE_WINDOW_DAYS=90
FEATURE_LAG_DAYS=7
FEATURE_CACHE_ENABLED=true
FEATURE_CACHE_TTL=86400

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=edupulse-experiments
MLFLOW_ARTIFACT_LOCATION=/app/mlruns
MLFLOW_REGISTRY_URI=sqlite:///mlflow.db

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Data Ingestion
DATA_UPLOAD_MAX_SIZE_MB=100
DATA_BATCH_SIZE=1000
DATA_VALIDATION_ENABLED=true
DATA_DUPLICATE_CHECK_ENABLED=true

# Monitoring and Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/edupulse.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# Performance
REQUEST_TIMEOUT=30
WORKER_CONNECTIONS=1000
WORKER_CLASS=uvicorn.workers.UvicornWorker
GRACEFUL_TIMEOUT=30

# External Services (if any)
DISTRICT_API_URL=
DISTRICT_API_KEY=
DISTRICT_API_TIMEOUT=10

# Feature Flags
ENABLE_ASYNC_PREDICTIONS=true
ENABLE_CONTINUOUS_LEARNING=true
ENABLE_MODEL_INTERPRETABILITY=true
ENABLE_DATA_QUALITY_CHECKS=true

# Resource Limits
MAX_PREDICTION_BATCH_SIZE=100
MAX_TRAINING_DATA_ROWS=1000000
MAX_CONCURRENT_TASKS=10

# Development Tools
JUPYTER_PORT=8888
FLOWER_PORT=5555
DOCS_ENABLED=true